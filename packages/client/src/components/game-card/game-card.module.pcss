.gameCard {
  display: inline-block;
  border-radius: 20px;
  background-color: var(--bg-color-primary, #fff);
  border: 4px solid var(--text-color-subtle, #333739);
  color: var(--text-color-subtle);
  box-shadow: 0 4px 10px currentcolor;
  transition: color 0.2s;
  overflow: hidden;

  &:hover {
    color: var(--color-accent-secondary, #ffe55f);
  }
}

.image {
  display: block;
  height: 100%;
  width: 100%;
  object-fit: cover;
  object-position: center;
}
