.container {
  padding-top: var(--gap);
}

.panel {
  padding: 24px;
  max-width: 930px;
  margin: 0 auto;
  border-radius: 12px;
  background-color: var(--color-light-primary);
  height: calc(100vh - 2 * var(--gap));
}

.controls {
  padding-bottom: 24px;
  display: flex;
  justify-content: space-between;
}

.threads {
  padding: 0 73px;
  width: 100%;
}

.search {
  display: flex;
  align-items: center;
}

.create {
  display: inline-flex;
  align-items: center;
}
