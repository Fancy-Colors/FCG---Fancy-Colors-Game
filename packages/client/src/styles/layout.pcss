.w-1 {
  width: var(--column);
}

.w-2 {
  width: calc(2 * var(--column) + var(--gap));
}

.w-3 {
  width: calc(3 * var(--column) + 2 * var(--gap));
}

.w-4 {
  width: calc(4 * var(--column) + 3 * var(--gap));
}

.w-6 {
  width: calc(6 * var(--column) + 5 * var(--gap));
}

.w-12 {
  width: calc(12 * var(--column) + 11 * var(--gap));
}

.app {
  margin: 0 auto;
  width: calc(12 * var(--column) + 11 * var(--gap));
  min-width: 320px;
}
