.panel {
  --panel-offset-top: 75px;

  padding: var(--panel-offset-top) 95px 65px;
  max-width: 930px;
  margin: 0 auto;
  border-radius: 12px;
  background-color: var(--color-light-primary);
}

.topLeaders {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  gap: 45px;
  margin-bottom: 32px;
}

.leadersList {
  & + & {
    margin-top: 45px;
  }
}
