.sideMenu {
  height: 100vh;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
  color: var(--text-color-primary);
  background-color: var(--bg-color-primary);
}

.logo {
  padding: 12px;
  height: 168px;
  fill: var(--color-accent-primary);
  min-width: 96px;

  &Link {
    align-self: center;
  }
}

.nav {
  display: flex;
  flex-flow: column;
  gap: var(--gap);
}

.textMenu {
  margin: 0;
}

.delimiter {
  height: 1px;
  background-color: var(--text-color-primary);
}

.howToText {
  text-align: center;
  color: var(--text-color-primary);

  &[data-expanded='true'] {
    text-align: start;
  }
}

.menuToggler {
  transform: rotate(-180deg);

  &.expanded {
    transform: rotate(0);
  }
}

.menuToggler,
.themeToggler {
  display: flex;
  align-items: center;
  justify-content: center;
  background: 0 0;
  border: none;
  cursor: pointer;
  color: inherit;
  font-size: 16px;

  &.expanded {
    justify-content: start;
  }

  span {
    margin-left: 7px;
  }
}

.authLink {
  margin: 0 auto;
  background-color: transparent;
  border: none;
  text-align: start;
  display: block;
  cursor: pointer;
}

@media (max-width: 1024px) {
  .sideMenu {
    min-width: 98px;
  }
}

@media (max-width: 500px) {
  .sideMenu {
    position: absolute;
    z-index: var(--z-index-menu);
    width: 100vw !important;
    min-width: var(--min-width);
    transform: translateX(-100%);
    transition: transform 0.3s;
  }

  .logo {
    margin-top: 14px;
    height: 90px;
  }

  .howToText {
    margin: 10px;
  }

  .show {
    transform: translateX(0);
  }

  .nav {
    width: calc(100vw - var(--gap) * 2) !important;
  }

  .authLink {
    margin: unset;
    width: 100% !important;
    min-width: 24px;
  }
}

@media (max-height: 930px) {
  .logo {
    margin-top: 14px;
    height: 90px;
  }

  .nav {
    gap: 10px;
  }

  .howToText {
    margin: 10px;
  }
}
