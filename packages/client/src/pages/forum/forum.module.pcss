.container {
  padding: var(--gap);
}

.panel {
  height: 100%;
}

.controls {
  padding: 0 var(--gap) 0;
  display: flex;
  justify-content: space-between;
}

.threads {
  padding: 0 var(--gap) 0;
  width: 100%;
}

.search {
  display: flex;
  align-items: center;
}

.create {
  display: inline-flex;
  align-items: center;
}

@media (max-width: 768px) {
  .controls {
    flex-direction: column-reverse;
    gap: var(--gap);
  }
}
