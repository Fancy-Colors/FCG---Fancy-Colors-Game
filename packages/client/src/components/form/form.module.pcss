.form {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form input {
  margin-top: 18px;
}

.form p + input {
  margin-top: unset;
}

.form button {
  margin-top: 36px;
}

.form p + button {
  margin-top: calc(36px - 18px);
}

.link {
  color: var(--color-accent-primary);
}
