.wrapper {
  overflow: hidden;
  border-radius: 12px;
  border: 1px solid var(--color-dark-secondary);

  &:focus-within {
    outline: 1px solid var(--color-dark-primary);
  }
}

.textarea {
  display: block;
  width: 100%;
  padding: 20px;
  background-color: var(--color-light-primary);
  font-size: var(--font-size-base);
  color: inherit;
  line-height: 1.5;
  outline: 0;
  resize: none;
}
