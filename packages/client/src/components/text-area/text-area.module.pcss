.wrapper {
  border-radius: 12px;
  padding: 20px 10px 20px 20px;
  background-color: var(--color-light-primary);
  border: 1px solid var(--color-dark-secondary);

  &:focus-within {
    outline: 1px solid var(--color-dark-primary);
  }
}

.textarea {
  display: block;
  width: 100%;
  border: 0;
  background: 0 0;
  padding: 0 5px 0 0;
  font-size: var(--font-size-base);
  color: inherit;
  line-height: 1.5;
  outline: 0;
  resize: none;
}
