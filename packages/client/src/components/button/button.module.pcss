.button {
  border-radius: 50px;
  text-align: center;
  white-space: nowrap;
  color: var(--text-color-primary-dark);
  border: 1px solid currentcolor;
  cursor: pointer;
  text-transform: uppercase;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.2;
  box-sizing: border-box;
}

.button:hover {
  filter: var(--hover);
}

.button:focus-visible {
  outline-color: var(--color-accent-secondary);
  outline-width: 2px;
}

.gradient {
  background: var(--color-gradient);
}

.light {
  background: var(--bg-color-subtle);
}

.icon {
  background: transparent;
  border: unset;
}

.colored {
  background: var(--color-accent-primary);
}

.small {
  padding: 5px 10px;
}

.medium {
  padding: 12px 46px;
}

.large {
  padding: 18px 0;
  width: 100%;
  font-size: 22px;
  line-height: 24px;
  font-weight: 600;
  min-width: 246px;
}

@media (max-width: 768px) {
  .large {
    padding: 14px 0;
    font-size: 20px;
    line-height: 22px;
  }
}
