.gameCard {
  display: inline-block;
  border-radius: 20px;
  background-color: var(--color-primary-white, #fff);
  border: 4px solid var(--color-dark-secondary, #333739);
  color: var(--color-medium, #6d7076);
  box-shadow: 0 4px 10px currentcolor;
  transition: color 0.2s;
  overflow: hidden;

  &:hover {
    color: var(--color-accent-secondary, #ffe55f);
  }
}

.image {
  display: block;
  height: 220px;
  width: 220px;
  object-fit: cover;
  object-position: center;
}
