.container {
  padding: var(--gap);
  height: 100vh;
}

.panel {
  height: 100%;
  width: 100%;
  background: var(--color-panel);
  border-radius: 12px;
  display: grid;
  min-width: 400px;
}

.content {
  margin: var(--gap);
  display: flex;
  justify-content: center;
}

.form {
  display: grid;
  align-items: center;
  width: 100%;
  max-width: 340px;
}
