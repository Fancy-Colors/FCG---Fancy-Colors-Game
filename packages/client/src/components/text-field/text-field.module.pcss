.textField {
  position: relative;
  width: 100%;
}

.input {
  display: block;
  padding: 10px 0;
  width: 100%;
  border: 0;
  background: 0 0;
  border-bottom: 1px solid var(--text-color-subtle);
  color: var(--text-color-primary);
  outline: 0;

  &::placeholder {
    color: var(--text-color-subtle);
  }

  &:focus::placeholder {
    opacity: 0;
  }
}

.error {
  position: absolute;
  top: calc(100% + 2px);
  margin: 0;
  color: var(--color-error);
}
