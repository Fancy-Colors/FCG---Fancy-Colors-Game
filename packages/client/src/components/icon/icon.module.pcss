.xs {
  width: 20px;
  height: 20px;
}

.small {
  width: 24px;
  height: 24px;
}

.medium {
  width: 30px;
  height: 30px;
}

.large {
  width: 40px;
  height: 40px;
}

@media (max-width: 768px) {
  .medium {
    width: 24px;
    height: 24px;
    min-width: 24px;
  }

  .xs {
    width: 15px;
    height: 15px;
  }
}
